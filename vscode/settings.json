{
    "go.alternateTools": {
        "go": "${workspaceFolder}/.vscode/scripts/go-wrapper.sh",
        // Переодпедеоление команды запука Delve из $LOCAL_DLVBIN
        //"dlv": "${workspaceFolder}/.vscode/scripts/dlv-wrapper.sh",
    },
    "go.delveConfig": {
        "debugAdapter": "legacy",
    },
    "go.lintTool": "golangci-lint",
    "go.lintFlags": [
        "--fast"
    ],
    "go.vetFlags": [
        "printfuncs=makeErrorf,makeSliceErrorf"
    ],
    "go.useLanguageServer": true,
    // "go.buildOnSave": "on", // Actually incompatible with LanguageServer
    "editor.emptySelectionClipboard": false,
    "editor.rulers": [
        100
    ],
    "[go]": {
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "golang.go",
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8"
    },
    "git.enabled": false,
    "git.autofetch": false,
}
